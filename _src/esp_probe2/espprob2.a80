        jr      p110
;
p120:   ld      hl,msg_ipcfg
        call    zx_puts
        ld      a,1
        ld      (prnansw),a
        ld      de,25
        ld      hl,cmd_cipsta
        call    send_cmd_wait_ok
        ld      a,0
        ld      (prnansw),a
        call    nz,x_err
;
p199:   ld      hl,msg_press_key
        call    zx_puts
        call    zx_getkey
;
p200:   call    zx_cls
        ld      hl,bigbuff
        ld      (ptr),hl
        ld      de,bigbuff+1
        ld      bc,16384
        ld      (hl),0
        ldir
        ld      hl,msg_menuload
        call    zx_puts
p201:   call    zx_getkey
        cp      0x30
        jp      z,disconn
        cp      0x31
        jr      c,p201
        cp      0x3a
        jr      nc,p201
        sub     0x31
        ld      (resnum),a

        ld      bc,0xc7ef
        ld      a,0x01
        out     (c),a           ;Clear RX FIFO

        ld      de,250
        ld      hl,cmd_conn2site
        call    send_cmd_wait_ok
        jp      z,p210
        cp      0xfa
        jp      z,p210
        call    x_err
        jr      p199
p210:
        ld      hl,cmd_cipsend
        call    zifi_putstr
        ld      a,(resnum)
        ld      l,a
        ld      h,0
        add     hl,hl
        add     hl,hl
        ld      de,tabl_ptrurl
        add     hl,de
        ld      e,(hl)
        inc     hl
        ld      d,(hl)
        ex      de,hl
        call    zifi_putstr
        ld      hl,str_crlf
        call    zifi_putstr

        ld      de,50
        call    set_timeout50
        call    wait_ok
        jp      z,p211
        call    x_err
        jp      p199

p211:   call    zifi_getchar
        jr      z,p211
        cp      '>'
        jr      nz,p211

        ld      hl,str_get1
        call    zifi_putstr
        ld      a,(resnum)
        ld      l,a
        ld      h,0
        add     hl,hl
        inc     hl
        add     hl,hl
        ld      de,tabl_ptrurl
        add     hl,de
        ld      e,(hl)
        inc     hl
        ld      d,(hl)
        ex      de,hl
        call    zifi_putstr
        ld      hl,str_get2
        call    zifi_putstr

        ld      de,50
        call    set_timeout50
        call    wait_ok
        cp      0xfd
        jp      z,p220
        call    x_err
        jp      p199

p220:   ld      de,1000
        call    set_timeout50

p22a:   ld      hl,strbuff
        ld      (hl),0
        call    rdipd
        ld      a,(strbuff)
        or      a
        jr      nz,p221
        call    x_tout
        jp      p199
p221:   ld      de,str_ipd
        call    ss_cmp
        jr      z,p222
        call    x_err
        jp      p199
p222:
        ld      hl,0
        ld      de,strbuff+7
p223:   ld      a,(de)
        inc     de
        cp      ':'
        jr      z,p225
        sub     0x30
        ld      c,l
        ld      b,h
        add     hl,hl
        add     hl,hl
        add     hl,bc
        add     hl,hl
        ld      c,a
        ld      b,0
        add     hl,bc
        jr      p223
p225:   ld      (packsz),hl
        ex      de,hl
        ld      hl,(maxpsz)
        xor     a
        sbc     hl,de
        jr      nc,p226
        ld      (maxpsz),de
p226:
        ld      hl,(ptr)
p231:   ld      bc,0xc0ef
        B_RED
        in      a,(c)
        B_BLACK
        jr      nz,p232
        call    check_timeout
        jr      c,p231
        call    x_tout
        jp      p199
p232:   cp      0xbf            ;
        jr      c,p233          ;
        ld      a,0xbf          ; д
p233:   ld      c,a             ; о
        ld      a,d             ; л
        or      a               ; г
        jr      nz,p234         ; о
        ld      a,e             ;
        cp      c               ; з
        jr      nc,p234         ; а
        ld      c,e             ; п
p234:   ex      de,hl           ; р
        xor     a               ; я
        ld      b,a             ; г
        sbc     hl,bc           ; а
        ex      de,hl           ; е
        ld      b,c             ; м
        ld      c,0xef          ;
        B_GREEN
        inir                    ; и быстро едем
        B_BLACK
        ld      a,d
        or      e
        jr      nz,p231
        ld      (ptr),hl

        ld      hl,(packsz)
maxpsz: equ     $+1
        ld      de,0
        xor     a
        sbc     hl,de
        jp      nc,p22a
;
        ld      hl,bigbuff
p241:   ld      a,(hl)
        inc     hl
p242:   cp      10
        jr      nz,p241
        ld      a,(hl)
        inc     hl
        cp      13
        jr      nz,p242
        inc     hl

        ld      a,(resnum)
        cp      3
        jp      c,pscr0
        cp      6
        jp      c,pgiga0
;pmus0:
        push    hl
        ex      de,hl
        ld      hl,(ptr)
        xor     a
        sbc     hl,de
        ld      c,l
        ld      b,h
        pop     hl
        ld      de,0xc86e
        ldir
        ld      hl,vtpl
        ld      de,0xc000
        ld      bc,sz_vtpl
        ldir
        ld      hl,msg_musply
        call    zx_puts
        call    0xc000
        ei
        res     5,(iy+1)
pmus1:  halt
        call    0xc005
        bit     5,(iy+1)
        jr      z,pmus1
        call    0xc008
        jp      p200
;
pgiga0: ld      de,0x4000
        ld      bc,0x1b00
        ldir
        ld      de,0xc000
        ld      bc,0x1b00
        ldir
        res     5,(iy+1)
        ld      bc,0x7ffd
pgiga1: halt
        ld      a,0x1f
        out     (c),a
        halt
        ld      a,0x17
        out     (c),a
        bit     5,(iy+1)
        jr      z,pgiga1
        jp      p200
