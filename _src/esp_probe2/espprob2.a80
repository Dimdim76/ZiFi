        ld      de,1000
        ld      hl,cmd_cwjap1
        call    zifi_putstr
        ld      hl,ssidbuff
        call    zifi_putstr
        ld      hl,cmd_cwjap2
        call    zifi_putstr
        ld      hl,(passptr)
