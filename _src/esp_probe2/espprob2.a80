HIGH:   FUNCTION X,((X>>8)&0xff)

B_BLACK:macro
        ex      af,af'
        out     (0xfe),a
        ex      af,af'
        endm

B_BLUE: macro
        ld      a,1
        out     (0xfe),a
        endm

B_RED:  macro
        ld      a,2
        out     (0xfe),a
        endm

B_GREEN:macro
        ld      a,4
        out     (0xfe),a
        endm

B_CYAN: macro
        ld      a,5
        out     (0xfe),a
        endm

B_YELL: macro
        ld      a,6
        out     (0xfe),a
        endm

bigbuff:equ     0x8000

        org     0x6000
;---------------------------------------
        res     4,(iy+1)
        ld      bc,0x7ffd
        ld      a,0x17
        out     (c),a
        ld      a,0x07
        ld      (0x5c48),a
        ld      (0x5c8d),a
        xor     a
        out     (0xfe),a
        call    zx_cls

;read SSID and Password from file
