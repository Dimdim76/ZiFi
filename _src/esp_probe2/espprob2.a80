        call    send_cmd_wait_ok
        jp      0
;------------------------------
send_cmd_wait_ok:
        push    hl
        call    set_timeout50
        pop     hl
        call    zifi_putstr
wait_ok:ld      hl,strbuff
        call    rdstr
        ld      a,(strbuff)
        or      a
        jr      nz,_scwo1
        inc     a
        ret
_scwo1: ld      a,(prnansw)
        or      a
        jr      z,_scwo2
        ld      hl,strbuff
        call    zx_puts
_scwo2: ld      de,str_ok
        call    ss_cmp
        ld      a,0x00
        jr      z,_scwo9
        ld      de,str_fail
        call    ss_cmp
        ld      a,0xff
        jr      z,_scwo9
        ld      de,str_error
        call    ss_cmp
        ld      a,0xfe
        jr      z,_scwo9
        ld      de,str_send_ok
        call    ss_cmp
        ld      a,0xfd
        jr      z,_scwo9
        ld      de,str_already_con
        call    ss_cmp
        ld      a,0xfa
        jr      nz,wait_ok
_scwo9: or      a
        ret
;------------------------------
rdstr:  call    zifi_getchar
        jr      z,rdst2
        cp      10              ;LF
        jr      z,rdst3
        ld      (hl),a
        inc     hl
        jr      rdstr
rdst2:  call    check_timeout
        jr      c,rdstr
rdst3:  ld      (hl),0
        ret
;------------------------------
rdipd:  call    zifi_getchar
        jr      z,ripd2
        ld      (hl),a
        inc     hl
        cp      ':'
        ret     z
        jr      rdipd
ripd2:  call    check_timeout
        jr      c,rdipd
        ret
;------------------------------
ss_cmp: ld      hl,strbuff
ss_cm1: ld      a,(de)
        or      a
        ret     z
        inc     de
        cpi
        jr      z,ss_cm1
        ret
;------------------------------
zifi_getchar:
        ld      bc,0xc0ef
        B_RED
        in      a,(c)
        B_BLACK
        ret     z
        ld      b,0
        B_CYAN
        in      a,(c)
        B_BLACK
        dec     b
        ret
;------------------------------
zifi_putstr:
;        push    hl
;        call    zx_puts
;        pop     hl
        ld      bc,0xc1ef
_zfpst0:
        B_BLUE
        in      a,(c)
        B_BLACK
        jr      z,_zfpst0
        cp      0xbf
        jr      c,_zfpst1
        ld      a,0xbf
_zfpst1:ld      b,a
_zfpst2:ld      a,(hl)
        or      a
        ret     z
        B_YELL
        outi
        B_BLACK
        jr      nz,_zfpst2
        jr      zifi_putstr
;------------------------------
zx_putchar_safe:
        cp      10              ;LF
        ret     z
        cp      13              ;CR
        jr      z,_putc1
        cp      0x20
        jr      c,_putc2
        cp      0x80
        jr      c,_putc1
_putc2: ld      a,0x7f
_putc1: push    hl
        rst     0x10
        pop     hl
        ret
;------------------------------
zx_puts:ld      a,0xff
        ld      (0x5c8c),a
_puts1: ld      a,(hl)
        inc     hl
        or      a
        ret     z
        call    zx_putchar_safe
        jr      _puts1
;------------------------------
zx_getkey:
        res     5,(iy+1)
_getk1: bit     5,(iy+1)
        jr      z,_getk1
        ld      a,(iy-50)
        ret
;------------------------------
zx_cls: ld      a,2
        ld      (0x5c6b),a
        call    0x0d6b
        ld      a,2
        call    0x1601
        xor     a
        ld      (0x5c6b),a
        ret
;------------------------------
set_timeout50:
        ld      hl,(0x5c78)
        add     hl,de
        ld      (tmout),hl
        ret
;------------------------------
check_timeout:
        push    hl
        push    de
        ld      de,(tmout)
        ld      hl,(0x5c78)
        xor     a
        sbc     hl,de
        pop     de
        pop     hl
        ret
