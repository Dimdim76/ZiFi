        ld      a,0
        ld      (prnansw),a
        jp      nz,x_err
;
        ld      de,25
        ld      hl,cmd_cwmode
        call    send_cmd_wait_ok
        jp      nz,x_err
        ld      de,25
        ld      hl,cmd_cwautoconn
        call    send_cmd_wait_ok
        jp      nz,x_err
        ld      de,25
        ld      hl,cmd_cwqap
        call    send_cmd_wait_ok
        jp      nz,x_err
;
p110:   ld      hl,msg_press_key
