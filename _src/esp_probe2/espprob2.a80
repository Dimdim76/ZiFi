        dec     de
        ld      a,d
        or      e
        jr      z,p029
        ld      a,(hl)
        or      a
        jr      z,p029
        cp      0x0d
        jr      z,p029
        cp      0x0a
        jr      z,p029
        jr      p023
p029:   xor     a
        ld      (hl),a
       ex      af,af'    ;for B_BLACK

p100:   ld      hl,p100
        push    hl

        ld      bc,0xc7ef
        ld      de,0xfff1
        out     (c),e           ;Set API mode 1
