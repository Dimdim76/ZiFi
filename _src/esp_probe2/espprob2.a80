        in      a,(c)
        cp      0xff
        jp      z,nozifi
        ld      a,0x01
        out     (c),a           ;Clear RX FIFO

        ld      b,3
p103:   push    bc
        ld      de,25
        ld      hl,cmd_ate0
        call    send_cmd_wait_ok
