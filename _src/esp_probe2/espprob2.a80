        ld      d,(ix+0x0f)
        ld      hl,ssidbuff
        push    hl
        ld      bc,0x0105
        call    0x3d13
        pop     hl
        ld      de,(packsz)
p021:   ld      a,d
        or      e
        jr      z,p029
        ld      a,(hl)
        or      a
        jr      z,p029
        cp      0x0d
        jr      z,p022
        cp      0x0a
        jr      z,p022
        inc     hl
        dec     de
        jr      p021
